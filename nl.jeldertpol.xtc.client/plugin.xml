<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="nl.jeldertpol.xtc.client.projectpopup"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               id="nl.jeldertpol.xtc.client.projectpopup.xtc"
               label="XTC"
               path="additions">
            <separator
                  name="session">
            </separator>
            <separator
                  name="preferences">
            </separator>
         </menu>
         <action
               class="nl.jeldertpol.xtc.client.projectpopup.StartJoinAction"
               enablesFor="1"
               id="nl.jeldertpol.xtc.client.projectpopup.xtc.startjoin"
               label="Start / Join"
               menubarPath="nl.jeldertpol.xtc.client.projectpopup.xtc/session">
         </action>
         <action
               class="nl.jeldertpol.xtc.client.projectpopup.DisconnectAction"
               enablesFor="1"
               id="nl.jeldertpol.xtc.client.projectpopup.xtc.disconnect"
               label="Disconnect"
               menubarPath="nl.jeldertpol.xtc.client.projectpopup.xtc/session">
         </action>
         <action
               class="nl.jeldertpol.xtc.client.projectpopup.PreferencesAction"
               id="nl.jeldertpol.xtc.client.projectpopup.xtc.preferences"
               label="Preferences"
               menubarPath="nl.jeldertpol.xtc.client.projectpopup.xtc/preferences">
         </action>
         <action
               class="nl.jeldertpol.xtc.client.projectpopup.FakeStartAction"
               id="nl.jeldertpol.xtc.client.projectpopup.xtc.fakestart"
               label="Fake start"
               menubarPath="nl.jeldertpol.xtc.client.projectpopup.xtc/session">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Shows the current sessions on the server."
            id="nl.jeldertpol.xtc.client.commands.showSessions"
            name="Show sessions">
      </command>
      <command
            description="Leave the currently joined session."
            id="nl.jeldertpol.xtc.client.commands.leaveSession"
            name="Leave session">
      </command>
      <command
            description="Start a new session."
            id="nl.jeldertpol.xtc.client.commands.startSession"
            name="Start session">
      </command>
      <command
            description="Show XTC preferences."
            id="nl.jeldertpol.xtc.client.commands.preferences"
            name="Preferences">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="nl.jeldertpol.xtc.client.actions.ShowSessionsAction"
            commandId="nl.jeldertpol.xtc.client.commands.showSessions">
      </handler>
      <handler
            class="nl.jeldertpol.xtc.client.actions.LeaveSessionAction"
            commandId="nl.jeldertpol.xtc.client.commands.leaveSession">
      </handler>
      <handler
            class="nl.jeldertpol.xtc.client.actions.StartSessionAction"
            commandId="nl.jeldertpol.xtc.client.commands.startSession">
      </handler>
      <handler
            class="nl.jeldertpol.xtc.client.actions.PreferencesAction"
            commandId="nl.jeldertpol.xtc.client.commands.preferences">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="nl.jeldertpol.xtc.client.menu"
               label="XTC"
               mnemonic="X">
            <command
                  commandId="nl.jeldertpol.xtc.client.commands.showSessions"
                  mnemonic="w"
                  style="push">
            </command>
            <command
                  commandId="nl.jeldertpol.xtc.client.commands.leaveSession"
                  mnemonic="L"
                  style="push">
            </command>
            <command
                  commandId="nl.jeldertpol.xtc.client.commands.startSession"
                  mnemonic="S"
                  style="push">
            </command>
            <separator
                  name="nl.jeldertpol.xtc.client.menu.separator"
                  visible="true">
            </separator>
            <command
                  commandId="nl.jeldertpol.xtc.client.commands.preferences"
                  mnemonic="P"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="nl.jeldertpol.xtc.client.preferences.XtcPreferencePage"
            id="nl.jeldertpol.xtc.client.preferences.XtcPreferencePage"
            name="XTC">
      </page>
      <page
            category="nl.jeldertpol.xtc.client.preferences.XtcPreferencePage"
            class="nl.jeldertpol.xtc.client.preferences.connection.ConnectionPreferencePage"
            id="nl.jeldertpol.xtc.client.preferences.connection.ConnectionPreferencePage"
            name="Connection preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="nl.jeldertpol.xtc.client.preferences.connection.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="nl.jeldertpol.xtc.client.views.xtc"
            name="XTC">
      </category>
      <view
            allowMultiple="false"
            category="nl.jeldertpol.xtc.client.views.xtc"
            class="nl.jeldertpol.xtc.client.views.EditorViewPart"
            id="nl.jeldertpol.xtc.client.views.editor"
            name="XTC editor"
            restorable="true">
      </view>
      <stickyView
            closeable="false"
            id="nl.jeldertpol.xtc.client.views.editor"
            location="RIGHT"
            moveable="true">
      </stickyView>
   </extension>

</plugin>
